{{#if model.content}}
  <h3>Choose a category</h3>
  <ul>
    {{#each model as |category|}}
      <li>{{#link-to "new-listing" category.id}}{{category.title}}{{/link-to}}</li>
    {{/each}}
  </ul>

{{else}}

  <h3>New Listing in {{model.title}}</h3>
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title"}}
    </div>
    <div class="form-group">
      <label for="price">Price</label>
      {{input value=price id="price"}}
    </div>
    <div class="form-group">
      <label for="location">Location</label>
      {{input value=location id="location"}}
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      {{input value=description id="description"}}
    </div>
    <div class="form-group">
      <label for="photoURL">Enter a photo url</label>
      {{input value=photoURL id="photoURL"}}
    </div>
    <button class="btn" {{action 'save' model}}>Submit</button>
  </form>
{{/if}}
